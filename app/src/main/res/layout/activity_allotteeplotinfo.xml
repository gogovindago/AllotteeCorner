<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.AllotteePlotInfoActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/mSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardsforpropertyDetial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="8dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edtbgwhite"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text=" Plot Detail "
                                android:textAllCaps="false"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:textAllCaps="false" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorPrimary">

                            </View>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtUrbanEstateName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Urban Estate"
                                    android:imeOptions="actionNext"
                                    android:inputType="textMultiLine"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtSector"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Sector"
                                    android:imeOptions="actionNext"
                                    android:inputType="textMultiLine"
                                    android:textColor="@color/black"

                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView7" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtPlotNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint="Plot No"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"

                                    android:textStyle="bold"
                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"

                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtCategory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint=" Property Category"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"

                                    android:textStyle="bold"

                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"

                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtSubCategory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint="Property Sub-Category"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtTypeofProperty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Type of Property"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtTotalCostofProperty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Total Cost of Property"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtEnhancementCost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Enhancement Cost"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtstatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint=" Property Status"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardsforOwnerPersonalDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="8dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edtbgwhite"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text=" Plot Information "
                                android:textAllCaps="false"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:textAllCaps="false" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorPrimary">

                            </View>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtTypeofInstalment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint="Type of Instalment"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"

                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtNoofInstalment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"


                                    android:enabled="false"
                                    android:hint="No of Instalment"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:textColor="@color/black"

                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtModeofAllotment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Mode of Allotment"
                                    android:imeOptions="actionNext"
                                    android:inputType="textMultiLine"
                                    android:textColor="@color/black"

                                    android:textStyle="bold"
                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtCourtCaseStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Court Case Status"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtUnderMortgageStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Under Mortgage Status"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    tools:ignore="TooDeepLayout" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/edtUnderMisuseStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"

                                    android:enabled="false"
                                    android:hint="Under Misuse Status"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/edtDateofAllotment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Date of Allotment"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/edtOfferofPossessionDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Offer of Possession Date"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/edtPossessionDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Offer of Possession Date"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/edtBuildingPlanSanctionDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Building Plan Sanction Date"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/noAllotteeNotice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text=" No Any  data found."
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:textAllCaps="false" />


                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>